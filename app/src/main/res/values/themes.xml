<!-- <resources xmlns:tools="http://schemas.android.com/tools"> -->
<resources>
    <!-- Base application theme. -->
    <style name="Base.GPSImageNotes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Set primary-color of the app, to change color of buttons etc. -->
        <item name="colorPrimary">@color/lightblue</item>
    </style>

    <style name="Theme.GPSImageNotes" parent="Base.GPSImageNotes" />

    <style name="Image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="ListItem.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkgray</item>
    </style>

    <style name="ListItem.Message">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/lightgray</item>
    </style>

    <style name="ListItem.NewTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ListItem.NewMessage">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ListItem.AddButton">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>